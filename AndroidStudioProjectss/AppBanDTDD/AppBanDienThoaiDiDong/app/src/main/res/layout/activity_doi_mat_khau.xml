<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/padding_top_bottom"
    android:paddingTop="30dp"
    android:paddingLeft="@dimen/padđing_left_right"
    android:paddingRight="@dimen/padđing_left_right"
    tools:context="com.caosiqui.quicaoit.appbandienthoaididong.activity.DoiMatKhauActivity">
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textSize="25sp"
        android:text="laptop abc"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:text="Đổi mật khẩu"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/txtTitle"/>
    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_promt"
        android:hint="@string/promt_username"
        android:padding="@dimen/padding_promt"
        android:textSize="@dimen/text_size"
        android:gravity="center_vertical"
        android:layout_below="@+id/txtStatus"/>
    <EditText
        android:id="@+id/txtCurentPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_promt"
        android:hint="Mật khẩu hiện tại"
        android:inputType="textWebPassword"
        android:layout_marginTop="@dimen/line_height"
        android:padding="@dimen/padding_promt"
        android:textSize="@dimen/text_size"
        android:gravity="center_vertical"
        android:layout_below="@+id/txtUserName"/>
    <EditText
        android:id="@+id/txtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_promt"
        android:hint="Mật khẩu mới"
        android:layout_marginTop="@dimen/line_height"
        android:padding="@dimen/padding_promt"
        android:textSize="@dimen/text_size"
        android:inputType="textWebPassword"
        android:gravity="center_vertical"
        android:layout_below="@+id/txtCurentPassword"/>
    <EditText
        android:id="@+id/txtRePassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_promt"
        android:hint="Nhập lại mật khẩu"
        android:layout_marginTop="@dimen/line_height"
        android:inputType="textWebPassword"
        android:padding="@dimen/padding_promt"
        android:textSize="@dimen/text_size"
        android:gravity="center_vertical"
        android:layout_below="@+id/txtNewPassword"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_button"
        android:paddingRight="@dimen/margin_button"
        android:paddingTop="@dimen/line_height"
        android:paddingBottom="@dimen/line_height"
        android:textSize="@dimen/text_size"
        android:text="Hủy bỏ"
        android:layout_marginTop="@dimen/margin_button"
        android:layout_marginLeft="50dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/txtRePassword" />
    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_button"
        android:paddingRight="@dimen/margin_button"
        android:paddingTop="@dimen/line_height"
        android:paddingBottom="@dimen/line_height"
        android:textSize="@dimen/text_size"
        android:text="Đồng ý"
        android:layout_marginTop="@dimen/margin_button"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/txtRePassword"
        android:layout_marginLeft="@dimen/margin_button"
        android:layout_toRightOf="@+id/btnCancel"
        />

</RelativeLayout >
